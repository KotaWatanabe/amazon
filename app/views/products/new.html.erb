<h1>New Product</h1>

<%= form_with(model: @product, local: true) do |form|
 %>

<% if @product.errors.present? %>
    <p class="form-errors">
    <%= @product.errors.full_messages.join(",")%>
<% end %>
 <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
 </div>
  <div>
    <%= form.label :description%>
    <%= form.text_area :description%>
 </div>
  <div>
    <%= form.label :price%>
    <%= form.number_field :price%>
 </div>

    <%= form.submit %>

 <% end %>